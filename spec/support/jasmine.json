{
  "spec_dir": ".",
  "spec_files": ["src/**/*[sS]pec.ts", "spec/**/*[sS]pec.ts"],
  "helpers": ["spec/helpers/**/*.ts", "spec/helpers/**/*.js"],
  "stopSpecOnExpectationFailure": false,
  "random": true,
  "reporters": [
    {
      "name": "jasmine-spec-reporter#SpecReporter",
      "options": {
        "displayStacktrace": "all"
      }
    }
  ]
}
